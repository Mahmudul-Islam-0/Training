@model IEnumerable<Training.Models.Entity.Department>

@{
    ViewData["Title"] = "DepartmentView";
}

<h1>DepartmentView</h1>

@* @model IEnumerable<Training.Models.Entity.Department> <!-- Adjust the model as needed -->
 *@
<h2>Department List</h2>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Id</td>
                <td>@department.Name</td>
                <td>
                    <!-- You can add edit/delete actions here -->
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("DepartmentSave")">Add New Department</a>
